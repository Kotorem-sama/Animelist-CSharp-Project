<Window x:Class="Animelist_CSharp_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Animelist_CSharp_Project"
        mc:Ignorable="d"
        Icon="./img/bruh.ico"
        Title="Nyanime" Height="450" Width="800"
        MinWidth="370" MinHeight="400">
    <!--WindowState="Maximized"-->
    <Grid Background="#FFFFFF">

        <!--Grid definition-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Frame NavigationUIVisibility="Hidden" Grid.Row="1" x:Name="MijnFrame" Content="Frame"/>

        <!--Borders get a color-->
        <Rectangle Grid.Row="0" Fill="#F69300"></Rectangle>
        <Rectangle Grid.Row="3" Fill="#FFCD63"></Rectangle>
        
        <!--Logo gets added-->
        <Image Grid.Row="0" RenderOptions.BitmapScalingMode="Fant" Source="./img/Logo.png" VerticalAlignment="Top" Height="56" />
    </Grid>
</Window>
