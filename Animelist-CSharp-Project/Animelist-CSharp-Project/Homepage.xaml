<Page x:Class="Animelist_CSharp_Project.Homepage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Animelist_CSharp_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Homepage">

    <Grid>
        <!--Back button-->
        <Button Name="ShowPasswordButton" BorderThickness="0" Click="ShowPasswordButton_Click" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0">
            <Image RenderOptions.BitmapScalingMode="Fant" Name="ShowPasswordImage">
                <Image.Style>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Source" Value="./Images/BackButton.png"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="False"/>
                            <Trigger Property="IsFocused" Value="False" />
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
            <Button.Background>
                <SolidColorBrush Color="#000000" Opacity="0" />
            </Button.Background>
        </Button>
    </Grid>
</Page>
